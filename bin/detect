#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

scriptname=$(basename $0)
case $# in
  1) :;;
  *) echo "$scriptname: usage: $scriptname BUILD_DIR" >&2; exit 2;;
esac

build_dir="$1"
spec_dir=$build_dir/.root
prefixes='
ext/redhat
fedora
packaging/rpm
rpm
spec
SPECS
'

if ls $build_dir/*.spec >/dev/null 2>&1
then
  ln -s . $spec_dir
  echo RPM
  exit 0
elif ls $build_dir/*.spec.in >/dev/null 2>&1
then
  ln -s . $spec_dir
  echo RPM
  exit 0
fi

for prefix in $prefixes
do
  if ls $build_dir/$prefix/*.spec >/dev/null 2>&1
  then
    ln -s $prefix $spec_dir
    echo RPM
    exit 0
  fi
done

exit 1
